<h1>Add Goal to <%= current_user.username %></h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <label>Title
    <input type="string" name="goal[name]" value="<%= @goal.name %>">
  </label>

  <label>Description
    <input type="string" name="goal[body]" value="<%= @goal.description %>">
  </label>

  <label>Public
    <input type="radio" name="goal[private]", value="false">
  </label>

  <label>Private
    <input type="radio" name="goal[private]", value="true">
  </label>

  <input type="submit" value="Submit Goal" >
</form>
