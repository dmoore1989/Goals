<h1>Edit Goal for <%= current_user.username %></h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <label>Title
    <input type="string" name="goal[name]" value="<%= @goal.name %>">
  </label>

  <label>Description
    <input type="string" name="goal[description]" value="<%= @goal.description %>">
  </label>


  <label>Public
    <input type="radio" name="goal[private]" value="false" <%= @goal.private ? "" : "checked" %>>
  </label>

  <label>Private
    <input type="radio" name="goal[private]" value="true" <%= @goal.private ? "checked" : "" %>>
  </label>

  <input type="hidden" name="goal[user_id]" value="<%= current_user.id %>">

  <input type="submit" value="Update Goal" >
</form>
