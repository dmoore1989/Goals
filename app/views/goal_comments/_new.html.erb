<form action="<%= goal_comments_url %>" method="post">
  <%= auth_token %>
  <label>Comment
    <input type="textarea" name="comment[comment]"></textarea>
  </label>

  <input type="hidden" name="comment[goal_id]" value="<%= goal.id %>">
  <input type="hidden" name="comment[commenter_id]" value="<%= current_user.id %>">

  <input type="submit" value="Add Comment">
</form>
