<form action="<%= comments_url %>" method="post">
  <%= auth_token %>
  <label>Comment
    <input type="textarea" name="comment[comment]"></textarea>
  </label>

  <input type="hidden" name="comment[commentable_id]" value="<%= commentable.id %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= commentable.model_name %>">
  <input type="hidden" name="comment[commenter_id]" value="<%= current_user.id %>">

  <input type="submit" value="Add Comment">
</form>
